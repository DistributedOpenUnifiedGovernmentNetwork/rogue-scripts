#!/bin/bash

DEV_MODE=False

# REPO INFO
GSCONFIG_REPO_URL=https://github.com/jj0hns0n/gsconfig.py.git
GSCONFIG_BRANCH=data_store_type

DOWNSTREAM_PROJECT_URL=https://github.com/ROGUE-JCTD/rogue_geonode.git
DOWNSTREAM_PROJECT_BRANCH=master
DOWNSTREAM_PROJECT_NAME=rogue_geonode

GEONODE_REPO_URL=https://github.com/GeoNode/geonode.git
GEONODE_BRANCH=master

# DEPENDENCIES
GEONODE_DEPENDENCIES="uwsgi psycopg2"

# GEOGIT ENVS 
GEOGIT_HOME_DIR=/home/rogue/dev/GeoGit

# GEONODE ENVS
VIRTUAL_ENV=/var/lib/geonode
STATIC_DIR=$VIRTUAL_ENV/$DOWNSTREAM_PROJECT_NAME/$DOWNSTREAM_PROJECT_NAME/static_root
SITE_URL=192.168.100.145
GEOSERVER_BASE_URL=$SITE_URL/geoserver

# GEONODE DATABASE ENVS
APPLICATION_DB_NAME=geonode
APPLICATION_USER_NAME=geonode
APPLICATION_USER_PASSWORD=geonode
APPLICATION_DB_HOST=localhost
APPLICATION_DB_PORT=5432

DB_DATASTORE_DATABASE=geonode_imports
DB_DATASTORE_USER=geonode
DB_DATASTORE_PASSWORD=geonode
DB_DATASTORE_HOST=localhost
DB_DATASTORE_PORT=5432
DB_DATASTORE_TYPE=postgis
DB_DATASTORE_NAME=geonode_imports

GEOGIT_DATASTORE_NAME=geonode-imports
GEOGIT_REPO_PATH=/data/geogit/

# GEOSERVER ENVS
GEOSERVER_DATA_DIR=/var/lib/geoserver_data

UPDATE_GEOSERVER_WAR=False

printf "DEV_MODE=$DEV_MODE\n";

printf "\n_REPO INFO_\n\n";
printf "GEONODE_REPO_URL=$GEONODE_REPO_URL\n";
printf "GEONODE_BRANCH=$GEONODE_BRANCH\n";
printf "GSCONFIG_REPO_URL=$GSCONFIG_REPO_URL\n";
printf "GSCONFIG_BRANCH=$GSCONFIG_BRANCH\n";
printf "DOWNSTREAM_PROJECT_URL=$DOWNSTREAM_PROJECT_URL\n";
printf "DOWNSTREAM_PROJECT_BRANCH=$DOWNSTREAM_PROJECT_BRANCH\n";
printf "DOWNSTREAM_PROJECT_NAME=$DOWNSTREAM_PROJECT_NAME\n";

printf "\n_DEPENDENCIES_\n\n";
printf "GEONODE_DEPENDENCIES=$GEONODE_DEPENDENCIES\n";

printf "\n_GEONODE ENVS_\n\n";
printf "VIRTUAL_ENV=$VIRTUAL_ENV\n";
printf "STATIC_DIR=$STATIC_DIR\n";
printf "SITE_URL=$SITE_URL\n";
printf "GEOSERVER_BASE_URL=$GEOSERVER_BASE_URL\n";

printf "\n_GEOGIT ENVS_\n\n";
printf "GEOGIT_HOME_DIR=$GEOGIT_HOME_DIR\n";

printf "\n_GEOSERVER ENVS_\n";
printf "GEOSERVER_DATA_DIR=$GEOSERVER_DATA_DIR\n";

printf "\n_GEONODE DATABASE ENVS_\n\n";
printf "APPLICATION_DB_NAME=$APPLICATION_DB_NAME\n";
printf "APPLICATION_USER_NAME=$APPLICATION_USER_NAME\n";
printf "APPLICATION_USER_PASSWORD=$APPLICATION_USER_PASSWORD\n";
printf "APPLICATION_DB_HOST=$APPLICATION_DB_HOST\n";
printf "APPLICATION_DB_PORT=$APPLICATION_DB_PORT\n\n";

printf "DB_DATASTORE_DATABASE=$DB_DATASTORE_DATABASE\n";
printf "DB_DATASTORE_USER=$DB_DATASTORE_USER\n";
printf "DB_DATASTORE_PASSWORD=$DB_DATASTORE_PASSWORD\n";
printf "DB_DATASTORE_HOST=$DB_DATASTORE_HOST\n";
printf "DB_DATASTORE_PORT=$DB_DATASTORE_PORT\n";
printf "DB_DATASTORE_TYPE=$DB_DATASTORE_TYPE\n";
printf "DB_DATASTORE_NAME=$DB_DATASTORE_NAME\n\n";

printf "GEOGIT_DATASTORE_NAME=$GEOGIT_DATASTORE_NAME\n";
printf "GEOGIT_REPO_PATH\n";
